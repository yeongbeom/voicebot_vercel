datasource db {
    provider = "postgresql"
    url      = "postgres://postgres:mysecretpassword@ketiair.com:50014/database"
}

generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["native"]
}

model User {
    id              String   @id @default(uuid())
    createdAt       DateTime @default(now())
    updatedAt       DateTime @updatedAt
    emergencyMobile String   @unique
    expression      String?
    emotion         String?
    age             Int?
    theme           String?
    passwordHash    String?
}
